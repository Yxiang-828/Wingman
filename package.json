{
  "name": "wingman",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",
  "author": "Yao_Xiang & Chua_Yong_Liang",
  "description": "Life-long Personal Assistant",
  "scripts": {
    "dev": "vite",
    "dev:full": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "start": "electron .",
    "electron": "electron electron/main.js",
    "electron:serve": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.wingman.assistant",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "src/assets"
    },
    "win": {
      "icon": "src/assets/productive.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "src/assets/productive.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "icon": "src/assets/productive.png",
      "category": "Utility",
      "target": [
        "AppImage"
      ]
    },
    "extraResources": [
      {
        "from": "src/assets/",
        "to": "resources"
      }
    ]
  }
}
