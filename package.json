{
  "name": "wingman",
  "private": true,
  "version": "1.0.0",
  "main": "electron/main.js",
  "author": "Yao_Xiang & Chua_Yong_Liang",
  "description": "Life-long Personal Assistant",
  "homepage": "https://Yxiang-828.github.io/Wingman/",
  "scripts": {
    "dev": "vite",
    "dev:full": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "start": "electron .",
    "electron": "electron electron/main.js",
    "electron:serve": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/material": "^7.1.0",
    "@supabase/supabase-js": "^2.49.7",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.6.2",
    "react": "^18.3.1",
    "react-calendar": "^5.1.0",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.0",
    "react-window": "^1.8.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^18.3.22",
    "@types/react-calendar": "^3.9.0",
    "@types/react-dom": "^18.3.7",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "gh-pages": "^6.1.0",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.wingman.assistant",
    "productName": "Wingman",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "Wingman-backend",
        "to": "backend",
        "filter": [
          "**/*.py",
          "**/*.txt",
          "app/**/*",
          "!**/__pycache__/**"
        ]
      }
    ],
    "win": {
      "icon": "src/assets/productive.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "src/assets/productive.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "icon": "src/assets/productive.png",
      "category": "Utility",
      "target": [
        "AppImage"
      ]
    }
  }
}
