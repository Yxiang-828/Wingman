{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": false, // Changed from true to false

    /* Linting - ERRORS ONLY */
    "strict": true,
    "noUnusedLocals": false,             // ✅ Disable unused warnings
    "noUnusedParameters": false,         // ✅ Disable unused warnings
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": false, // Added comma here

    "composite": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist-node"
  },
  "include": ["vite.config.ts", "electron"]
}
